#!/usr/bin/env bash

rm -rf dist/
cp -r docs/ dist/

site_files=$(find ./dist -name "*.md")

for entry in $site_files 
do
  file_name="$(dirname "$entry")/$(basename "$entry" .md)"
  pandoc $entry -c styles.css --metadata title="$(basename "$entry" .md)" --template=template.html -o "$file_name.html" 
  sed -Ei 's/.md/.html/g' "$file_name.html"
  rm $entry
done
